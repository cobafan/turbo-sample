<%= turbo_stream.prepend "todos", @todo %>
<%= turbo_stream.update "new_todo" do %>
  <h2>Add New TODO</h2>
  <%= render "form", todo: Todo.new %>
<% end %>
<%= turbo_stream.update "statistics" do %>
  <%= render "statistics" %>
<% end %>
<%= turbo_stream.update "filter_tabs" do %>
  <%= render "filter_tabs" %>
<% end %>
